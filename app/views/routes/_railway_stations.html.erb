<strong>Railway Stations:</strong>
<table>
  <thead>
  <tr>
    <td width="100px">Title:</td>
    <td>Position:</td>
  </tr>
  </thead>
  <tbody>
    <% @route.railway_stations.ordered.each do |railway_station| %>
      <tr>
        <td><%= railway_station.title %></td>
        <td>
          <%= form_tag update_position_railway_station_path(railway_station), method: :patch do %>
          <%= number_field_tag :position, railway_station.position_in(@route) %>
            <%= hidden_field_tag :route_id, @route.id %>
            <%= submit_tag "Update" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
